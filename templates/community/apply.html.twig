{% extends 'base.html.twig' %}
{% block title %}Apply for membership{% endblock %}
{% block body %}
<div class="container py-5" style="max-width: 560px;">
  <h1 class="mb-3">Apply for membership</h1>
  <p class="text-muted">Enter your email to request access. We'll send you a confirmation link.</p>
  {% if error %}<div class="alert alert-danger">{{ error }}</div>{% endif %}
  <form method="post" action="{{ path('community_apply') }}" class="needs-validation">
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input name="email" id="email" type="email" required class="form-control" value="{{ email|default('') }}" placeholder="you@example.com">
    </div>

    {# Honeypot â€“ hide with CSS #}
    <div style="position:absolute; left:-5000px;">
      <label>Company</label>
      <input type="text" name="company" tabindex="-1" autocomplete="off">
    </div>

    <button class="btn btn-primary">Request access</button>
  </form>
  <style>
    /* Optional: nicer spacing if you use Bootstrap already */
  </style>
</div>
{% endblock %}
