{# templates/qw/runner.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Questionnaire{% endblock %}

{% block body %}
  <style>
    .qw-runner-shell {
      display: flex;
      gap: 24px;
      padding: 24px;
      background: linear-gradient(180deg, #f9fafb 0%, #eef2ff 100%);
      border-radius: 18px;
      min-height: calc(100vh - 140px);
    }
    .qw-runner-nav {
      flex: 0 0 260px;
      max-width: 260px;
      background: #fff;
      border: 1px solid #e5e7eb;
      border-radius: 16px;
      padding: 18px;
      position: sticky;
      top: 18px;
      height: fit-content;
      box-shadow: 0 10px 30px rgba(67, 56, 202, 0.12);
    }
    .qw-runner-main {
      flex: 1 1 auto;
      min-width: 0;
      background: #fff;
      border: 1px solid #e5e7eb;
      border-radius: 16px;
      padding: 24px 28px;
      box-shadow: 0 16px 36px rgba(15, 23, 42, 0.12);
    }
    .qw-nav-title {
      font-size: 14px;
      font-weight: 600;
      color: #4338ca;
      margin-bottom: 12px;
      text-transform: uppercase;
      letter-spacing: 0.08em;
    }
    .qw-nav-item {
      display: block;
      padding: 10px 12px;
      border-radius: 12px;
      margin-bottom: 6px;
      font-size: 13px;
      color: #374151;
      text-decoration: none;
      transition: background 0.15s ease, color 0.15s ease;
    }
    .qw-nav-item:hover,
    .qw-nav-item.is-active {
      background: #eef2ff;
      color: #1f2937;
    }
    .qw-runner-header {
      margin-bottom: 24px;
      border-bottom: 1px solid #e5e7eb;
      padding-bottom: 18px;
    }
    .qw-runner-header h1 {
      font-size: 26px;
      font-weight: 600;
      margin-bottom: 6px;
      color: #111827;
    }
    .qw-runner-meta {
      font-size: 13px;
      color: #6b7280;
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
    }
  </style>

  <div class="container mx-auto">
    <div id="qw-runner-root" data-ci="{{ ci_key }}"></div>
  </div>

  {{ encore_entry_link_tags('qw-runner') }}
  {{ encore_entry_script_tags('qw-runner') }}
{% endblock %}
